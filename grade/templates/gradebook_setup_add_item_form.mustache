{{!
    @template core_grades/gradebook_setup_add_item_form

    The gradebook setup add item dropdown within the tertiary navigation.

    Context variables required for this template:
    * courseid - The course ID.
    * initialsbars - The rendered mini renderer from the user renderer.

    Example context (json):
    {
        "courseid": "2",
        "initialsbars": "Output from renderer method"
    }
}}
<div class="btn dropdown-toggle keep-open d-flex text-left align-items-center p-0 font-weight-bold" data-toggle="dropdown" aria-haspopup="true" tabindex="-1" aria-label="{{#str}} aria-toggledropdown, core_grades {{/str}}" >
    Add
</div>
<ul class="dropdown-menu" role="listbox">
    {{#addgradeitemlist}}
        <li class="dropdown-item" role="option" data-courseid="{{courseid}}" data-itemid="-1" data-trigger='add-item-form' data-gprplugin='tree'>{{#str}} additem, grades{{/str}}</li>
    {{/addgradeitemlist}}
    {{#addoutcomeitemlist}}
        <li class="dropdown-item" role="option" data-courseid="{{courseid}}" data-itemid="-1" data-trigger='add-outcome-form' data-gprplugin='tree'>{{#str}} addoutcomeitem, grades{{/str}}</li>
    {{/addoutcomeitemlist}}
    {{#addcategorylist}}
        <li class="dropdown-item" role="option" data-courseid="{{courseid}}" data-category="-1" data-trigger='add-category-form' data-gprplugin='tree'>{{#str}} addcategory, grades{{/str}}</li>
    {{/addcategorylist}}
</ul>